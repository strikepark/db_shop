<!doctype html>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <title>
            <%= blocks.title %>
        </title>
        <script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="/css/core.css">
    </head>
    
    <body>
        <header>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Shop</a>
                    </div>
                    
                    <ul class="nav navbar-nav">
                        <li><a href="//localhost:3000/products">Продукты</a></li>
                        <li><a href="//localhost:3000/costumers">Покупатели</a></li>
                    </ul>
                    
                    <div class="nav navbar-form navbar-right">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#add-product">
                            Добавить продукт
                        </button>
                    
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#add-costumer">
                            Добавить покупателя
                        </button>
                    
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#add-order">
                            Добавить заказ
                        </button>
                    </div>
                </div>
            </nav>
        </header>

        <div class="modal fade" id="add-product" tabindex="-1" role="dialog" aria-labelledby="add-product">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Добавление продукта</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="inputProductName" class="col-sm-2 control-label">Название:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputProductName" placeholder="Название продукта">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="inputProductPrice" class="col-sm-2 control-label">Цена:</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="inputProductPrice" placeholder="Цена продукта">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="inputProductCount" class="col-sm-2 control-label">Кол-во:</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="inputProductCount" placeholder="Количество продукта">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default">Добавить продукт</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="modal fade" id="add-costumer" tabindex="-1" role="dialog" aria-labelledby="add-costumer">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel">Добавление покупателя</h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="inputСostumerName" class="col-sm-2 control-label">Имя:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputСostumerName" placeholder="Имя покупателя">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="inputСostumerPhone" class="col-sm-2 control-label">Телефон:</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" id="inputСostumerPhone" placeholder="Телефон покупателя">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-default">Добавить покупателя</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="modal fade" id="add-order" tabindex="-1" role="dialog" aria-labelledby="add-order">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel">Добавление заказа</h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="inputOrderName" class="col-sm-2 control-label">Название:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputOrderName" placeholder="Название заказа">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="inputOrderCostumerId" class="col-sm-2 control-label">ID пок.:</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" id="inputOrderCostumerId" placeholder="ID покупателя (например: 13)">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="inputOrderProductId" class="col-sm-2 control-label">ID прод.:</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" id="inputOrderProductId" placeholder="ID продукта (например: 3)">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="inputOrderCount" class="col-sm-2 control-label">Кол-во:</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" id="inputOrderCount" placeholder="Количество товара в заказе">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-default">Добавить заказ</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- body %>

        <footer>
            <%- blocks.footer %>
        </footer>
    </body>
</html>